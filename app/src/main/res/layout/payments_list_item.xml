<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/five_dp"
    android:layout_marginRight="@dimen/five_dp"
    android:layout_marginTop="@dimen/five_dp"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/payment_list_item_relative_layout_payments_activity"
    >

    <ImageView
        android:id="@+id/image_status_payment_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        />

    <com.ascentsmartwaves.andealr.custom.CustomTextView
        android:id="@+id/general_text_payments_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Invoice / Payment Text"
        android:textSize="@dimen/twenty_sp"
        android:textColor="#000"
        />
    <com.ascentsmartwaves.andealr.custom.CustomTextView
        android:id="@+id/deal_tittle_text_payments_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Deal Tittle :"
        android:textSize="@dimen/twenty_sp"
        android:textColor="#000"
        android:layout_below="@id/general_text_payments_fragment"
        android:visibility="visible"
        />
    <com.ascentsmartwaves.andealr.custom.CustomTextView
        android:id="@+id/amount_text_payments_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Amount :"
        android:textSize="@dimen/twenty_sp"
        android:textColor="#000"
        android:layout_below="@id/deal_tittle_text_payments_fragment"
        android:visibility="visible"
        />


    <include
        layout="@layout/include_date_and_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount_text_payments_fragment"
        />

</RelativeLayout>
</android.support.v7.widget.CardView>