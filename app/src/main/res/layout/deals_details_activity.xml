                <!--android:layout_marginBottom="@dimen/fifteen_dp"-->
                <!--android:layout_alignBottom="@id/tittle_bottom_strip_andnrby_details_activity"-->
                <!--/>-->



            </RelativeLayout>

        </android.support.v7.widget.CardView>
