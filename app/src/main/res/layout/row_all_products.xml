<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_small"
    >

    <ImageView
        android:id="@+id/product_image_all_products_landing_fragment"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="#578493"
        />
    <com.ascentsmartwaves.andealr.custom.CustomTextView
        android:id="@+id/product_text_all_products_landing_fragment"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SAGAR"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:background="#5A0A3A"
        />

</LinearLayout>